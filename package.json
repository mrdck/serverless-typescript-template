{
  "name": "serverless-typescript-template",
  "version": "1.0.0",
  "author": "Mateusz Perlak",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "start": "serverless offline",
    "build": "serverless package",
    "lint": "eslint \"src/*.ts\"",
    "test": "jest --coverage -i",
    "deploy": "serverless deploy"
  },
  "devDependencies": {
    "@middy/core": "2.5.7",
    "@middy/http-error-handler": "3.6.2",
    "@middy/http-json-body-parser": "2.5.7",
    "@middy/validator": "2.5.7",
    "@types/aws-lambda": "8.10.97",
    "@types/jest": "27.5.2",
    "@typescript-eslint/eslint-plugin": "5.27.0",
    "@typescript-eslint/parser": "5.27.0",
    "aws-lambda": "1.0.7",
    "doctoc": "2.2.0",
    "dotenv": "14.3.2",
    "env-var": "7.1.1",
    "eslint": "7.32.0",
    "eslint-config-standard": "16.0.3",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "5.2.0",
    "eslint-plugin-standard": "5.0.0",
    "http-status-codes": "2.2.0",
    "husky": "7.0.4",
    "inversify": "6.0.1",
    "jest": "27.5.1",
    "lint-staged": "11.2.6",
    "reflect-metadata": "0.1.13",
    "serverless": "2.72.3",
    "serverless-bundle": "5.3.0",
    "serverless-plugin-test-helper": "2.6.4",
    "serverless-offline": "8.8.0",
    "ts-jest": "27.1.5",
    "typesafe-api-gateway": "1.0.1",
    "typescript": "4.7.2"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|js)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/"
    ],
    "collectCoverageFrom": [
      "src/*.{js,ts}",
      "src/**/*.{js,ts}"
    ]
  },
  "lint-staged": {
    "*.ts": "eslint --cache",
    "*.md": "doctoc --github --notitle"
  }
}
